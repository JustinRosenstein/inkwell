{
  "name": "inkwell",
  "productName": "Inkwell",
  "version": "1.0.0",
  "description": "A minimal WYSIWYG markdown editor with AI-powered editing",
  "main": "main.js",
  "scripts": {
    "build": "esbuild renderer.js --bundle --outfile=dist/renderer.js --format=iife --platform=browser",
    "watch": "esbuild renderer.js --bundle --outfile=dist/renderer.js --format=iife --platform=browser --watch",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron . --dev",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.inkwell.app",
    "productName": "Inkwell",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "dist/renderer.js",
      "assets/**/*"
    ]
  },
  "keywords": [
    "markdown",
    "editor",
    "wysiwyg",
    "ai",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.19.0"
  },
  "dependencies": {
    "@tiptap/core": "^2.1.13",
    "@tiptap/extension-link": "^2.1.13",
    "@tiptap/extension-placeholder": "^2.1.13",
    "@tiptap/extension-task-item": "^2.1.13",
    "@tiptap/extension-task-list": "^2.1.13",
    "@tiptap/extension-typography": "^2.1.13",
    "@tiptap/pm": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "diff-match-patch": "^1.0.5",
    "turndown": "^7.1.2",
    "marked": "^11.1.0"
  }
}
